              .window__buttons
                .window__button.window__button--quit
                .window__button.window__button--reduce
                .window__button.window__button--enlarge
              .window__title
                p Gmail
            .window__content
              .gmail
                .gmail__header
                  .gmail__brand
                    img(src="img/header-glogo.png")
                  .gmail__search-bar
                  .gmail__avatar
