block content
  header.header
    include _nav.pug
    .header__content
      .header__catchline
        h1.title.title--light Charts, simple as a URL
        p.text.text--light No more server-side rendering pain, 1 url = 1 chart
        //- p.text.text--light A safe and fast replacement for Google Image Charts
        // Because Google Image Charts is deprecated and can be shutdown at any time. I needed a fast, safe, drop-in-place replacement for Google Image Charts.
      .header__presentation
        .window.window--header.js-window
          .window__header
            .window__buttons
              .window__button.window__button--quit
              .window__button.window__button--reduce
              .window__button.window__button--enlarge
            .window__url
              p.ellipsis.reverse-ellipsis
                span.window__url--ic &nbsp;
            .window__url-copy.hide Copied !
          .window__content.window__content--centered
        .flip.hide.js-flip.flip--animation
          .window.window--header.window--code-header.js-window2.flip__front
            .window__header
              .window__buttons
                .window__button.window__button--quit
                .window__button.window__button--reduce
                .window__button.window__button--enlarge
              .window__title
                p VIM
            .window__content.window__editor
              ol.code.js-code--header
                li
                  span.code
                    span.v &lttable class="report-email"&gt
                li
                  span.code
                    span.v &nbsp;&nbsp;&lttbody&gt
                li
                  span.code
                    span.v &nbsp;&nbsp;&nbsp;&nbsp;&lttr&gt&lttd&gt <span class="chat__cursor" id="cursor--first" aria-hidden="true"></span>
                li
